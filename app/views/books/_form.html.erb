<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :book_name %>
    <%= f.input :book_level %>
    <%= f.input :total_words %>
    <%= f.input :words_wrong %>
    <%= f.input :self_corrections %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
